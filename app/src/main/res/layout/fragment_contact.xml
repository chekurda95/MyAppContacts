<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp">

        <ImageView
            android:id="@+id/contact_photo"
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:background="@android:color/darker_gray"
            android:src="@android:drawable/ic_menu_camera"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/contact_first_name"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:hint="@string/first_name"
            app:layout_constraintBottom_toTopOf="@id/contact_last_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/contact_photo"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/contact_last_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/last_name"
            app:layout_constraintBottom_toTopOf="@id/contact_company_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/contact_photo"
            app:layout_constraintTop_toBottomOf="@id/contact_first_name" />

        <EditText
            android:id="@+id/contact_company_name"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:hint="@string/company_name"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/contact_photo"
            app:layout_constraintTop_toBottomOf="@id/contact_last_name" />
    </android.support.constraint.ConstraintLayout>

    <EditText
        android:id="@+id/contact_telephone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:hint="@string/telephone_number" />

</LinearLayout>